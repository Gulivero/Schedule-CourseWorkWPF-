        <Button x:Name="enter" Click="enter_Click" Content="Войти" HorizontalAlignment="Left" Margin="55,148,0,0" VerticalAlignment="Top" Width="234" Height="39" FontSize="22" Grid.ColumnSpan="2"/>

    </Grid>
